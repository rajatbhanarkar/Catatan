<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffc107"
    android:orientation="vertical"
    tools:context=".ProfileSetupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#424242"
        android:padding="10dp"
        android:elevation="10dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="-20dp"
            android:layout_centerInParent="true"
            android:src="@drawable/profilepic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Setup your profile!"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:elevation="5dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:textSize="15sp"
            android:textColorHint="#424242"
            android:background="@drawable/rounded_borders"
            android:hint="Enter Your Name"
            android:textColor="#424242" />

        <AutoCompleteTextView
            android:id="@+id/actvbranch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:hint="Enter Your Branch"
            android:textSize="15sp"
            android:background="@drawable/rounded_borders"
            android:layout_marginTop="10dp"
            android:textColorHint="#424242"
            android:textColor="#424242" />

        <AutoCompleteTextView
            android:id="@+id/actvsem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/rounded_borders"
            android:hint="Enter Your Semester"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textColor="#424242"
            android:textColorHint="#424242" />

        <Button
            android:id="@+id/btnsavedetails"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#424242"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:text="Save Profile Details" />

    </LinearLayout>

</LinearLayout>